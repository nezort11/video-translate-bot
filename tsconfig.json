{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "target": "ESNext", // emit version
    "module": "CommonJS", // emit module (CJS)
    "lib": ["ESNext", "DOM"], // transpile version
    "moduleResolution": "Node" /* (CommonJS) */, // transpile module
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": false,
    "strict": true,
    "noImplicitAny": false,
    "useUnknownInCatchVariables": false,
    "inlineSourceMap": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
    "esm": true
  },
  "include": ["./src"]
}
