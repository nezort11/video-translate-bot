{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "target": "ESNext", // emit version
    "module": "ESNext", // emit module
    "lib": [
      "ESNext",
      "DOM"
    ], // build version
    "moduleResolution": "Node", // build module (CommonJS)
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": false,
    "strict": true,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": false,
    "inlineSourceMap": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "./src"
  ]
}
